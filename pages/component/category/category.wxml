<import src="../../common/nav.wxml" />

<view class="main">
  <template is="nav" />
  <view class="categroy-top bg_color">
    <view class="categroy-fir-list" wx:for="{{goods}}" wx:for-item="first_level"  data-index="{{index}}">
      <view class="categroy-fir-list-name">
        <view class="navigator-text">{{first_level.first_level_category}}</view>
        <view class="navigator-arrow"></view>
      </view>
      <view class="categroy-sec-list">
        <view wx:for="{{first_level.content}}" wx:for-item="second_level" data-sec_id="{{second_level.sec_ord}}" url="second_level.url" class="categroy-sec-list-name" data-fir_id="{{first_level.fir_ord}}" bindtap="switchTab">
          <!--<text>{{second_level.second_level_category}}</text>-->
          {{second_level.second_level_category}}
        </view>
      </view>
    </view>
  </view>
  <view class="categroy-bottom">
    <view class="good-all">
      <view wx:for="{{goods[curFirIndex].content[curSecIndex].good}}" wx:for-item="good" class="good">
        <navigator url="../details/details?fir_ord={{good.fir_ord}}&sec_ord={{good.sec_ord}}&sec_ord={{good.sec_ord}}&good_ord={{good.good_ord}}">
          <image mode="widthFix" src="{{good.url}}" class="good-img"></image>
          <text class="good-name">{{good.name}}</text>
          <text class="good-dec">{{good.dec}}</text>
          <text class="good-price bg_color">价格：{{good.price}}</text>
        </navigator>
      </view>
    </view>
  </view>







