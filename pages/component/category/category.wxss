.main{
  height: 100%;
  /*padding: 0 10rpx;*/
}

.nav{
  height: 13% !important;
}
.categroy{
  height: 100%;
  border-top: 1rpx solid #e9e9e9;
}

.categroy-left{
  display: inline-block;
  width: 25%;
  height: 100%;
  box-sizing: border-box;
  border-right: 1rpx solid #e9e9e9;
  /*padding: 0 10rpx;*/
  box-sizing: border-box;
}
.scroll-view-left-item{
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e9e9e9;
  border-right: 4rpx solid transparent;
}
.scroll-view-left-item.on{
  border-right: 4rpx solid #c71f3b;
  color: #c71f3b;
}


.categroy-right{
  display: inline-block;
  width: 75%;
  height: 100%;
  box-sizing: border-box;
  /*border: 1rpx solid #e9e9e9;*/
  text-align: left;
}
.scroll-view-right-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding:10rpx;
  height: 250rpx;
  align-content: center;
  border-bottom: 1rpx solid #e9e9e9;
}
.right-item-img{
  width: 200rpx;
  height: 200rpx;
  background-color: #eee;
  flex-shrink: 0;
}
.right-item-view{
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.right-item-view text{
  display: block;
  height: 50rpx;
  line-height: 50rpx;
  overflow:hidden;
  text-overflow:ellipsis;
}
.right-item-view text:nth-child(2){
  text-decoration: line-through;
  color: #898989;
}




















