<import src="../common/nav.wxml" />
<import src="../common/productList.wxml" />
<view class="main">
  <template is="nav" data="{{config}}" />
  <view class="index-top">
    <swiper indicator-dots="true" autoplay="true" interval="{{interval}}" duration="{{duration}}" circular="true">
      <block wx:for="{{imgUrls}}" wx:key="{{index}}">
        <swiper-item>
          <image mode="widthFix" src="{{item}}" class="slide-image" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="recom">
    <view class="title"><text class="color">TOP</text>热销产品</view>
    <view class="recom-top">
      <navigator wx:for="{{index_middle_img}}" url="details/details">
        <image mode="aspectFit" src="{{item}}"></image>
      </navigator>
    </view>
    <view class="recom-bottom" bindtap="toCategory">
      <image mode="widthFix" src="{{index_middle2_img}}"></image>
      <view class="recom-bottom-list medium_font bg_color">马上抢购</view>
    </view>
  </view>

  <view class="goodsxx">
    <view class="goodsxx-bt">
      <view class="title">产品展示</view>
      <view class="subtit_cate">
        <navigator url="url">开心果</navigator>
        <navigator url="url">点心面</navigator>
        <navigator url="url">松子</navigator>
        <navigator url="url">碧根果</navigator>
        <navigator url="url">卤味</navigator>
      </view>
    </view>
    <view class="good-lb">
      <template is="product_list" data="{{products}}" />
      <!--<view class="load_more" bindtap="load_more">加载更多</view>-->
    </view>
  </view>
 </view>