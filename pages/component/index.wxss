.title{
  text-align: left ;
  padding-left: 15rpx;
  font-size: 34rpx;
}
.title text{
  font-weight: bold;
  padding-right: 6rpx;
}
.good-lb{
  padding: 20rpx 0;
}


.main{text-align: center;margin: 0 10rpx;}
swiper {
    width: 100%;
    height: 500rpx;
    margin: 0 auto 20rpx auto;
}
swiper-item image {
     width: 100%;
     height: 100%;
}

.index-top{
  position: relative;
  text-align: center;
}
.index-top-list{
  position: absolute;
  top: 30rpx;
  width: 100%;
}
.index-top-one{
  font-size: 40rpx;
}
.index-top-two{
  margin: 20rpx 0;
}
.index-top-three{
  width: 200rpx;
  border-radius: 20rpx;
  margin: 0 auto;
}
.recom-top{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 20rpx;
}
.recom-top navigator{
  width: 49%;
}
.recom-top image{
  width: 100%;
  height: 560rpx;
  background-color:#eee;
}
.recom-bottom{
  position: relative;
}
.recom-bottom image{
  width: 100%;
}
.recom-bottom .recom-bottom-list{
  position: absolute;
  width: 200rpx;
  border-radius: 30rpx;
  bottom: 50rpx;
  right: 114rpx;
}
.goodsxx-bt{
  position: relative;
}
.subtit_cate{
  position: absolute;
  top: 0;
  right: 15rpx;
  height: 52rpx;
  display: none;
}
.subtit_cate navigator{
  float: left;
  font-size: 24rpx;
  border-right: 1px solid #eee;
  padding: 0 10rpx;
  line-height: 50rpx;
}
.load_more{
  border: 1px solid #eee;
  font-size: 30rpx;
  padding: 10rpx;
  line-height: 80rpx;
  width: 100%;
}


