<view class="main">
  <view class="order-status-content bg_color">
    <text wx:if="{{order.pay_status==1}}">待付款</text>
    <text wx:else>已支付</text>
  </view>
  <view class="delivery-box confirm-box">
    <view class="delivery-top">
      <text class="fl">配送地址</text>
    </view>
    <view class="delivery-middle">
      <view class="delivery_addr-no-content">
        <view class="delivery_addr-no-list">
            <image src="../../../image/local.jpg" style="width:50px; height:50px;"></image>
            <view class="addr_name">收货人:<text class="color">{{address.name}}</text></view>
            <view class="addr_phone">电话:{{address.phone}}</view>
            <view class="addr_detail">{{address.detail}}</view>
        </view>
      </view>
    </view>
  </view>

  <view class="orders-list confirm-box">
    <view class="orders-number color2">订单编号：{{order.oid}}</view>
    <navigator url="/page/component/details/details" class="orders-detail">
        <image src="{{product.url}}"></image>
        <view class="">{{product.product_name}}</view>
        <view class="">￥{{product.price}} x <text class="color2" style="font-size:26rpx;">{{product.amount}}</text></view>
        <!--<text wx:if="{{order.pay_status==1}}" class="orders-status">待付款</text>
        <text wx:else class="orders-status">已支付</text>-->
    </navigator>
    <view class="orders-footer">
        <text><text wx:if="{{order.pay_status==2}}">应付：</text><text wx:if="{{order.status==1}}">实付：</text><text class="color">￥{{order.total_amount}}</text></text>
        <view wx:if="{{order.pay_status==1}}"  class="orders-btn" data-oid="{{order.oid}}" bindtap="payOrders">付款</view>
        <navigator url="../details/details?id={{product.id}}" wx:if="{{order.order_status==3||order.pay_status==2}}" class="orders-btn">再次购买</navigator>
    </view>
  </view>

  

  <view class="confirm-pay confirm-box" style="border-bottom:none;">
      <view class="delivery-top">
        <text class="fl">支付方式</text>
        <view class="picker fr">在线支付</view>
      </view>

    
    <view class="delivery-top delivery-bottom coupon-list" >
      <text class="fl">优惠券</text>
      <view wx:if="{{disass.yhjprice}}" class="picker fr small"><text class="color medium">-￥{{disass.yhjprice}}</text></view>   
      <view wx:else class="picker fr">未使用</view>     
    </view>

    <view class="delivery-top delivery-bottom integral-list">
      <text class="fl">积分</text>
      <view class="picker fr small"><text class="color medium">-￥{{disass.jfprice || '0.00'}}</text></view>      
    </view>
  </view>

  <view class="confirm-invoice confirm-box" style="border-bottom:none;">
    <view class="delivery-top">
      <text class="fl">余额</text>
      <view class="picker fr small"><text class="color medium">-￥{{disass.yeprice || '0.00'}}</text></view>
    </view>
  </view>

</view>
