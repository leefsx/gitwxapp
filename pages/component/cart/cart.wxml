<view class="main">
    <view wx:if="{{hasList}}">
        <view class="cart-box">
            <view class="cart-list" wx:for="{{foods}}" wx:key="{{index}}">
                <icon wx:if="{{item.selected}}" type="success" color="#f00" data-index="{{index}}"  class="cart-pro-select" bindtap="selectList"/>
                <icon wx:else type="circle" class="cart-pro-select" data-index="{{index}}" bindtap="selectList"/>
                <navigator url="../details/details?id={{item.cid}}"><image class="cart-thumb" src="{{item.image}}"></image></navigator>
                <text class="cart-pro-name">{{item.title}}</text>
                <text class="cart-pro-price">￥{{item.sum}}</text>
                <view class="cart-count-box">
                    <text class="cart-count-down" bindtap="minusCount" data-index="{{index}}">-</text>
                    <text class="cart-count-num">{{item.num}}</text>
                    <text class="cart-count-add" bindtap="addCount" data-index="{{index}}">+</text>
                </view>
                <!--<text class="cart-del" bindtap="deleteList" data-index="{{index}}">×</text>-->
                <icon class="cart-del" size="23" type="cancel" color="#aaa" bindtap="deleteList" data-index="{{index}}"></icon>
            </view>
        </view>

        <view class="cart-footer">
            <icon wx:if="{{selectAllStatus}}" type="success_circle" color="#fff" class="total-select" bindtap="selectAll"/>
            <icon wx:else type="circle" color="#fff" class="total-select" bindtap="selectAll"/>
            <text class="cart-toatl-tex">全选</text>
            <text class="cart-toatl-price">总共:<text>￥{{totalPrice}}</text><text>不含运费</text></text>
            <text wx:if="{{jsStatus}}" class="cart-toatl-qjs cart-toatl-js" bindtap="toConfirm">去结算<text>({{totleNum}})</text></text>
            <text wx:else class="cart-toatl-qjs">请选购</text>
        </view>
    </view>
    <view wx:else>
        <view class="cart-no-data">购物车是空的哦~</view>
    </view>
</view>