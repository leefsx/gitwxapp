    </view>

    <view class="categroy-right">
      <scroll-view scroll-y style="height:100%;"  bindscrolltolower="reachBottom" scroll-with-animation>
        <navigator wx:for="{{products}}" wx:key="{{index}}" url="../details/details?id={{item.id}}" class="scroll-view-right-item">
          <image mode="aspectFit" class="right-item-img" src="{{item.doc_image}}"/>
          <view class="right-item-view">
            <text class="right-item-view-title medium_font">{{item.title}}</text>
            <text class="right-item-view-title medium_font color">ï¿¥{{item.price}}</text>
            <text class="right-item-view-title small_font">{{item.intro}}</text>
          </view>
        </navigator>
        <template is="prompt" data="{{prompt}}"></template>
      </scroll-view>
      
    </view>
  </view>



