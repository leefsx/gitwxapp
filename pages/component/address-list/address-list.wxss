.address-list {
	width: 100%;
	height: 100%;
	padding-bottom: 100rpx;	
}

.address-list .weui-media-box {
	padding: 20rpx 70rpx 20rpx 30rpx;
	position: relative;
}
.weui-media-box__desc{
	line-height: 55rpx;
}
.address-list .edit {
	position: absolute;
	top: 50%;
	right: 30rpx;
	width: 40rpx; 
    height: 40rpx;
    -webkit-transform: translate3d(0, -50%, 0);
    transform: translate3d(0, -50%, 0);
}

.address-list .edit .icon {
    width: 40rpx; 
    height: 40rpx;
}



.btn-plus{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
	background-color: #fff;
	border-top: 1rpx solid #e1e1e1;
}
.btn-plus image{
	width: 40rpx;
	height: 40rpx;
	margin-right: 10rpx;
}